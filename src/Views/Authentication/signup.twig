{% block content %}
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<div class="panel panel-default">
				<div class="panel-heading">Sign up</div>
				<div class="panel-body">
					<form action="{{ path_for('authentication.signup') }}" method="post">
						<div class="form-group {{ errors.name ? 'has-error' : '' }}">
							<label for="name">Name</label>
							<input class="form-control" type="text" name="name" id="name" placeholder="Full Name" value="{{ old.name }}">
							{% if errors.name %}
								<span class="help-block">{{ errors.name | first }}</span>
							{% endif %}
						</div>
						<div class="form-group {{ errors.email ? 'has-error' : '' }}">
							<label for="email">email</label>
							<input class="form-control" type="email" name="email" id="email" placeholder="you@provider.com" value="{{ old.email }}">
							{% if errors.email %}
								<span class="help-block">{{ errors.email | first }}</span>
							{% endif %}
						</div>
						<div class="form-group {{ errors.password ? 'has-error' : '' }}">
							<label for="password">password</label>
							<input class="form-control" type="password" name="password" id="password" placeholder="************" value="">
							{% if errors.password %}
								<span class="help-block">{{ errors.password | first }}</span>
							{% endif %}
						</div>
						<button type="submit" class="btn btn-default">Sign up</button>
						{{ csrf.field | raw }}
					</form>
				</div>
			</div>
		</div>
	</div>
{% endblock %}