{% extends 'Templates/page.twig' %}

{% block title %}Home{% endblock %}

{% block content %}

<h1>Your videos</h1>

<div class="container-fluid">
	<div class="row">

		<div class="panel panel-default">
			<div class="panel-heading">
				Video title
			</div>
			<div class="panel-body">


				<form action="/courses/new" method="get" class="form-inline">
					<div class="form-group">
						<label class="sr-only" for="exampleInputEmail3">Video Url</label>
						<input type="url" name="url" class="form-control" id="exampleInputEmail3" placeholder="http://video.url" >
					</div>

					<button type="submit" class="btn btn-default"><i class="fa fa-pencil"></i> Edit video</button>
				</form>
			</div>
		</div>


	</div>


</div>

{% endblock %}
